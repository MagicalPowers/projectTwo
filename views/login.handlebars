    {{!-- Card Footer: Log In Error Messages --}}
    <div class="card-footer text-muted errmsg" {{#unless userError}}style="display:none" {{/unless}}>
      <strong>
        <font color="red" size="4">Username is invalid.</font>
      </strong>
    </div>
    <div class="card-footer text-muted errmsg" {{#unless passwordError}}style="display:none" {{/unless}}>
      <strong>
        <font color="red" size="4">Password is invalid.</font>
      </strong>
    </div>
    <div class="card-footer text-muted errmsg" {{#unless unfilledError}}style="display:none" {{/unless}}>
      <strong>
        <font color="red" size="4">Please fill out all fields.</font>
      </strong>
    </div>
    <div class="card-footer text-muted errmsg" {{#unless signedUp}}style="display:none" {{/unless}}>
      <strong>
        <font color="green" size="4">You're signed up! Please log in.</font>
      </strong>
    </div>

  </div>

</div>