<html>
  <head>
    <title>Login</title>
  </head>
  <body class="login_body">
    <div class="login_div">
      <p style="color:green;"></p>
      <h1>Login</h1>
      <form action="/" method="POST">
        <input
          id="username_input"
          type="text"
          placeholder="Username"
          name="username"
        /><br /><input
          id="password_input"
          type="password"
          placeholder="Password"
          name="password"
        /><br /><br /><input
          class="login_buttons"
          id="login_button"
          type="submit"
          value="Login"
          formaction="/login"
        /><input
          class="login_buttons"
          id="create_account_button"
          type="submit"
          value="Create Account"
          formaction="/signup"
        /><br />
      </form>
      <a href="/patch">Patch Notes</a>
    </div>
  </body>
</html>