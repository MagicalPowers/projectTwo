<html>

<head>
  <title>Login</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body class="login_body">
  <div class="card text-center">
    <div class="card-header">
      Featured
    </div>
    <div class="card-body">
      <div class="container">
        <div class="row justify-content-md-center">
          <div class="col col-lg-2">
          </div>
          <div class="col-md-auto">
            <h1>Login</h1>
            <form method="POST" action="/signin">
              <input id="username_input" type="text" class="form-control" placeholder="Username" name="username" />
              <br />
              <input id="password_input" class="form-control" type="password" placeholder="Password" name="password" />
              <br /><br />
              <button class="btn btn-primary" id="login_button" type="submit" value="Login">Login</button>
              <a class="btn btn-primary" href="/createaccount">Create account</a>
              <br />
            </form>
          </div>
          <div class="col col-lg-2">
          </div>
        </div>
      </div>
    </div>
    <div id = "error" class="card-footer text-muted">
      Error
    </div>
  </div>
{{!-- ////////////////// --}}
  <div class="modal fade" id="fieldAlertModalCenter" tabindex="-1" role="dialog" aria-labelledby="fieldAlertModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="fieldAlertModalLongTitle">Mayday!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Please fill out all fields.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
{{!-- /////////////////////// --}}
</body>
